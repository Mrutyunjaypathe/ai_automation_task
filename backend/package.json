{
    "name": "ai-workflow-agent-backend",
    "version": "1.0.0",
    "type": "module",
    "description": "Backend for AI Workflow Agent",
    "main": "src/server.js",
    "scripts": {
        "dev": "nodemon src/server.js",
        "start": "node src/server.js",
        "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write \"src/**/*.js\"",
        "db:migrate": "node src/lib/db/migrate.js",
        "db:migrate:create": "node src/lib/db/create-migration.js",
        "db:seed": "node src/lib/db/seed.js",
        "worker": "node src/workers/executor/index.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "redis": "^4.6.11",
        "bullmq": "^5.1.5",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "joi": "^17.11.0",
        "openai": "^4.20.1",
        "axios": "^1.6.2",
        "nodemailer": "^6.9.7",
        "handlebars": "^4.7.8",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "express-rate-limit": "^7.1.5",
        "express-async-errors": "^3.1.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "eslint": "^8.55.0",
        "prettier": "^3.1.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.3"
    }
}